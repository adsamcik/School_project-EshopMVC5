@model Eshop.Models.Review[]

@{
    ViewBag.Title = "Reviews";
}

@for (int i = 0; i < Model.Length; i++) {
    <div class="list-group list-group-item active" style="background: #ccc; border: 0; color: #333; margin-bottom: 15px;">
        <a href="@Url.Action("DeleteReview", "Admin", new { ID = Model[i].ReviewID }, null)" style="font-size: 300%; top: 50%; right: 10px; float: right;">
            <div class="glyphicon glyphicon-trash"></div>
        </a>
        <h4 class="list-group-item-heading">@Model[i].Author | @Model[i].ReviewDate</h4>
        <p style="color: #444; font-size: 12px;">@Model[i].Plus @Model[i].Minus</p>
    </div>
}

