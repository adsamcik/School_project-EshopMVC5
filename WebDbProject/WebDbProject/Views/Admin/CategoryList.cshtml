@model Eshop.Models.Category[]

@{
    ViewBag.Title = "Admin/ProductList";
}
<a href="@Url.Action("AddCategory")"><div class="glyphicon glyphicon-plus" style="font-size: 25px;"></div></a>

@for (int i = 0; i < Model.Length; i++) {
    <div class="list-group list-group-item active" style="background: #ccc; border: 0; color: #333; margin-bottom: 15px;">
        <a href="@Url.Action("DeleteCategory", "Admin", new { ID = Model[i].CategoryID }, null)" style="font-size: 300%; top: 50%; right: 10px; float: right;">
            <div class="glyphicon glyphicon-trash"></div>
        </a>
        <a href="@Url.Action("EditCategory", "Admin", new { ID = Model[i].CategoryID}, null)">
            <h4 class="list-group-item-heading">@Model[i].Name</h4>
        </a>
    </div>
}

